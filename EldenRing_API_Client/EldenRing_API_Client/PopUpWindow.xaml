<Window x:Class="EldenRing_API_Client.PopUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EldenRing_API_Client"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="PopUpWindow" Height="200" Width="350">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Content="Details" HorizontalAlignment="Left" Margin="10,108,0,0" VerticalAlignment="Top" Click="Details_Button_Click"/>
        <Button Grid.Column="1" Content="Update" HorizontalAlignment="Center" Margin="0,108,0,0" VerticalAlignment="Top" Click="Update_Button_Click"/>
        <Button Grid.Column="2" Content="Delete" HorizontalAlignment="Center" Margin="0,108,0,0" VerticalAlignment="Top" Click="Delete_Button_Click"/>
        <TextBlock TextAlignment="Center" HorizontalAlignment="Left" Margin="0,10,0,0" TextWrapping="Wrap" Text="{Binding name}" VerticalAlignment="Top" Height="82" Width="330" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
